<%- include('../partials/header')%>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center;">Edit <%= camp.name%></h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campGrounds/<%=camp._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" placeholder="name"
                        value="<%= camp.name%>" required />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="campground[price]" placeholder="price" min="0.1"
                        step="0.1" value="<%= camp.price %>" required />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" placeholder="image url"
                        value="<%= camp.image%>" required />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[description]" placeholder="description"
                        value="<%= camp.description%>" required />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campGrounds">Back</a>
        </div>
    </div>


</div>

<%- include('../partials/footer')%>