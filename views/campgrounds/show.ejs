<%- include('../partials/header')%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Ingo 1</li>
                <li class="list-group-item">Ingo 2</li>
                <li class="list-group-item">Ingo 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-fluid card-img-top">
                <img src="<%= camp.image %>" alt="" class="img-thumbnail">
            </div>
            <div class="card mb-md-3">
                <div class="card-body" id="description">
                    <div class="card-text">
                        <div class="row">
                            <div class="col-md-10">
                                <h2><a href="#"><%= camp.name %></a></h2>
                            </div>
                            <div class="d-flex flex-row-reverse col-md-2">$9.00/night</div>
                            <div class="col-md-10">
                                <em> Submitted by - <span><%= camp.author.username %></span></em>
                            </div>
                        </div>
                        <p><%= camp.description %></p>
                    </div>
                </div>
            </div>

            <div class="card card-body bg-light mb-md-5">
                <div class="text-right mb-md-4">
                    <a class="btn btn-info" href="/campGrounds/<%= camp._id%>/comments/new">Add a review</a>
                </div>
                <hr>
                <%camp.comments.forEach(function(comment) { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="float-md-right"><%=    comment.created.toDateString()  %></span>
                        <p><%= comment.text %> </p>
                    </div>
                </div>
                <%});%>
            </div>




        </div>

    </div>
</div>




<%- include('../partials/footer')%>