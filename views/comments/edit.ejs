<%- include('../partials/header')%>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center;">Edit comment</h1>
        </div>
        <div style="margin: 25px auto;" class="width">
            <form action="/campGrounds/<%=campid%>/comments/<%= comment._id%>?_method=PUT" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="your comment"
                        value="<%= comment.text%>" required />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campGrounds">Back</a>
        </div>
    </div>


</div>

<%- include('../partials/footer')%>