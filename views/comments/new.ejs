<%- include('../partials/header')%>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center;">Add a review to <%= camp.name %></h1>
        </div>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campGrounds/<%= camp._id%>/comments" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="tell us what you think"
                        required />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control font-weight-bold" name="comment[author]" placeholder="author"
                        required value="<%=currentUser.username.toUpperCase()%>" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campGrounds/<%= camp._id %>">Back</a>
        </div>
    </div>


</div>

<%- include('../partials/footer')%>