<%- include('partials/header')%>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <p>View our hand picked campgrounds from all over the country!</p>
    <a class="btn btn-primary" href="/campGrounds/new">Add new Campground</a>
  </header>

  <br /><br />
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <div class="col-lg-12">
      <h3>Our most popular backgrounds</h3>
    </div>
    <% camps.forEach(function(camp){ %>

    <div class="col-md-4 col-sm-6">
      <div class="card">
        <img src="<%= camp.image %>" alt="" class="img-fluid card-img-top" />
        <div class="card-body">
          <h4 class="card-text"><%= camp.name %></h4>
          <p>
            <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
          </p>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer')%>