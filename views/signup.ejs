<%- include('partials/header')%>
<div class="container">
    <div class="col-lg-12">
        <h1 style="text-align: center;">Signup page</h1>
    </div>
    <div style="margin: 25px auto;" class="width">
        <form action="/signup" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="username" id="" placeholder="username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" id="" placeholder="password">    
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>    
            </div>
        </form>
        <h5 style="margin-top: 40px;">Don't have an account?,<span><a href="/signup">signup here</a></span>.</h5>
    </div>    
</div>
<%- include('partials/footer')%>